<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffff">

    <LinearLayout
        android:id="@+id/test_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.rogge.widget.single_check.SingleCheckView
            android:id="@+id/test_we"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:scv_check_tv_color="@color/c_f8a438"
            app:scv_checked="true"
            app:scv_checked_drawable="@drawable/icon_ico_high_to_low_large"
            app:scv_explain="我们"
            app:scv_unCheck_tv_color="@color/c_292929"
            app:scv_unChecked_drawable="@drawable/icon_ico_low_to_high_large" />

        <com.rogge.widget.single_check.SingleCheckView
            android:id="@+id/test_your"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:scv_check_tv_color="@color/c_f8a438"
            app:scv_checked_drawable="@drawable/icon_ico_high_to_low_large"
            app:scv_explain="你们"
            app:scv_unCheck_tv_color="@color/c_292929"
            app:scv_unChecked_drawable="@drawable/icon_ico_low_to_high_large" />

        <com.rogge.widget.single_check.SingleCheckView
            android:id="@+id/test_they"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:scv_check_tv_color="@color/c_f8a438"
            app:scv_checked_drawable="@drawable/icon_ico_high_to_low_large"
            app:scv_explain="他们"
            app:scv_unCheck_tv_color="@color/c_292929"
            app:scv_unChecked_drawable="@drawable/icon_ico_low_to_high_large" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/test_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:overScrollMode="never" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/test_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_success" />
</RelativeLayout>
